<Window x:Class="Tehtava2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txbInput" HorizontalAlignment="Left" Height="23" Margin="185,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="65" TextChanged="textBox_TextChanged"/>
        <TextBlock x:Name="txtOutput" HorizontalAlignment="Left" Height="23" Margin="300,104,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="110" />
        <ComboBox x:Name="cmbFromCurrency" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="120,104,0,0" Height="23" SelectionChanged="comboBox_SelectionChanged">
            <ListBoxItem Content="USD"/>
            <ListBoxItem Content="EUR"/>
        </ComboBox>
        <TextBlock x:Name="txtToCurrency" HorizontalAlignment="Left" Margin="268,105,0,0" TextWrapping="Wrap" Text="?" VerticalAlignment="Top" Height="22" Width="32"/>

    </Grid>
</Window>
